---
import '../styles/global.css';
import { Image } from 'astro:assets';

// Import Assets (Images)
// Catatan: Pastikan nama file di folder src/assets sama persis dengan yang diimport ini
import profilePic from '../assets/fotoprofil.jpg';
import proj1 from '../assets/show national contiguity.PNG';
import proj2 from '../assets/global meteorite.PNG';
import proj3 from '../assets/projek laundryku.PNG';
import proj4 from '../assets/projek todolist.PNG';
import proj5 from '../assets/projekwmccopy.PNG';

// Get all certificates dynamically
const certImages = await Astro.glob('../assets/sertif/*.PNG');

// SEO Data
const pageTitle = "Fadjar Aryo Seto - Frontend Developer Portfolio";
const pageDescription = "Portfolio of Fadjar Aryo Seto, a Frontend Developer and UI/UX Enthusiast specializing in building fast, interactive, and beautiful web experiences.";
const siteUrl = "https://portfolio-fadjar.netlify.app"; // Ganti dengan URL Netlify kamu nanti
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content={pageDescription}>
    <meta name="author" content="Fadjar Aryo Seto">
    <title>{pageTitle}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content={siteUrl}>
    <meta property="og:title" content={pageTitle}>
    <meta property="og:description" content={pageDescription}>
    <meta property="og:image" content={profilePic.src}>

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content={siteUrl}>
    <meta property="twitter:title" content={pageTitle}>
    <meta property="twitter:description" content={pageDescription}>
    <meta property="twitter:image" content={profilePic.src}>

    <!-- Favicon -->
    <link rel="icon" type="image/jpg" href={profilePic.src} />
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/glightbox/dist/css/glightbox.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css">
</head>
<body>
    <nav class="navbar" id="navbar">
        <div class="nav-container">
            <a href="#home" class="logo">My Portofolio</a>
            
            <ul class="nav-menu" id="nav-menu">
                <li><a href="#home" data-index="0">Home</a></li>
                <li><a href="#projects" data-index="1">Projects</a></li>
                <li><a href="#certificates" data-index="2">Certificates</a></li>
                <li><a href="#contact" data-index="3">Contact</a></li>
                <li>
                    <button id="theme-toggle" class="theme-toggle" aria-label="Toggle Dark Mode">
                        <i class="fas fa-moon"></i>
                    </button>
                </li>
            </ul>
            
            <div class="hamburger" id="hamburger">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>
        
        <div class="mobile-menu" id="mobile-menu">
            <ul>
                <li><a href="#home" data-index="0">Home</a></li>
                <li><a href="#projects" data-index="1">Projects</a></li>
                <li><a href="#certificates" data-index="2">Certificates</a></li>
                <li><a href="#contact" data-index="3">Contact</a></li>
            </ul>
        </div>
    </nav>

    <main class="scroll-container" id="mainContainer">
        <section class="hero fade-up" id="home">
            <div class="hero-content">
                <Image src={profilePic} alt="Fadjar Aryo Seto" class="profile-picture" width={360} height={360} quality="high" />
                <div class="hero-text">
                    <h1>Fadjar Aryo Seto</h1>
                    <p>I am a <span id="typing-text" class="typing-text"></span><span class="cursor">|</span></p>
                    <p class="hero-description">Where art meets algorithm. A curated chaos of my visual and logical explorations.</p>
                    <div class="hero-buttons">
                        <a href="#projects" class="cta-button" data-index="1">View My Work</a>
                        <a href="/cv-fadjar-aryo-seto.pdf" download class="cta-button outline-btn">Download CV <i class="fas fa-download"></i></a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Tech Stack Section (Infinite Marquee) -->
        <div class="tech-stack fade-up">
            <div class="marquee-container">
                <div class="marquee-content">
                    <i class="fab fa-html5" title="HTML5"></i>
                    <i class="fab fa-css3-alt" title="CSS3"></i>
                    <i class="fab fa-js" title="JavaScript"></i>
                    <i class="fab fa-react" title="React"></i>
                    <i class="fab fa-node-js" title="Node.js"></i>
                    <i class="fab fa-git-alt" title="Git"></i>
                    <i class="fab fa-bootstrap" title="Bootstrap"></i>
                    <i class="fas fa-database" title="SQL"></i>
                    <!-- Duplicate for seamless loop -->
                    <i class="fab fa-html5" title="HTML5"></i>
                    <i class="fab fa-css3-alt" title="CSS3"></i>
                    <i class="fab fa-js" title="JavaScript"></i>
                    <i class="fab fa-react" title="React"></i>
                    <i class="fab fa-node-js" title="Node.js"></i>
                    <i class="fab fa-git-alt" title="Git"></i>
                    <i class="fab fa-bootstrap" title="Bootstrap"></i>
                    <i class="fas fa-database" title="SQL"></i>
                    <!-- Triplicate for wider screens -->
                    <i class="fab fa-html5" title="HTML5"></i>
                    <i class="fab fa-css3-alt" title="CSS3"></i>
                    <i class="fab fa-js" title="JavaScript"></i>
                    <i class="fab fa-react" title="React"></i>
                    <i class="fab fa-node-js" title="Node.js"></i>
                    <i class="fab fa-git-alt" title="Git"></i>
                    <i class="fab fa-bootstrap" title="Bootstrap"></i>
                    <i class="fas fa-database" title="SQL"></i>
                </div>
            </div>
        </div>

        <section class="section fade-up" id="projects">
            <h2>My Projects</h2>
            <div class="swiper project-swiper">
    <div class="swiper-wrapper">
    <div class="swiper-slide">
        <div class="project-card">
            <Image src={proj1} alt="Project 1" />
            <div class="project-content">
                <div class="project-section"><h3>Peran Saya</h3><ul><li>Peran: Visualisasi data geografis kompleks jadi grafik jaringan interaktif.</li></ul></div>
                <div class="project-section"><h3>Proses</h3><ul><li>Ambil JSON eksternal, parse & render D3.js dengan node bendera, link perbatasan, plus drag‑zoom‑pan.</li></ul></div>
                <div class="project-section"><h3>Apa yang Saya Pelajari</h3>Mendalami API asinkron, force‑directed graph D3.js, dan integrasi spritesheet bendera di SVG.</li></ul></div>
                <div class="project-buttons">
                    <a href="https://codepen.io/Fajar-Seto/full/zxGaJQK" class="project-button">Go to link</a>
                    <a href="#" class="project-button-detail" data-project="0">View Detail</a>
                 </div>
            </div>
        </div>
    </div>
    <div class="swiper-slide">
        <div class="project-card">
            <Image src={proj2} alt="Project 2" />
            <div class="project-content">
                <div class="project-section"><h3>Peran Saya</h3><ul><li>Mengembangkan aplikasi visualisasi pendaratan meteorit global interaktif.</li></ul></div>
                <div class="project-section"><h3>Proses</h3><ul><li>Ambil data JSON API, render peta dunia dengan D3.js & TopoJSON, titik meteorit diskalakan berdasarkan massa, plus tooltip on‑hover.</li></ul></div>
                <div class="project-section"><h3>Apa yang Saya Pelajari</h3><ul><li>Mendalami proyeksi geospasial D3.js, plotting koordinat latitude/longitude, representasi massa kuantitatif, dan desain interaksi tooltip.</li></ul></div>
                <div class="project-buttons">
                    <a href="https://codepen.io/Fajar-Seto/full/xbGzMPp" class="project-button">Go to link</a>
                    <a href="#" class="project-button-detail" data-project="1">View Detail</a>
                 </div>
            </div>
        </div>
    </div>
    <div class="swiper-slide">
        <div class="project-card">
            <Image src={proj3} alt="Project 3" />
            <div class="project-content">
                <div class="project-section"><h3>Peran Saya</h3><ul><li> Merancang & membangun sistem informasi manajemen laundry web full‑stack, dari desain database hingga fitur transaksi dan laporan.</li></ul></div>
                <div class="project-section"><h3>Proses</h3><ul><li>Backend pakai PHP native & MySQL; frontend dengan HTML, CSS (Bootstrap & Materialize) dan JavaScript (AJAX); generate PDF invoice/laporan via spipu/html2pdf (Composer).</li></ul></div>
                <div class="project-section"><h3>Apa yang Saya Pelajari</h3><ul><li> Mendalami siklus development web full‑stack—skema basis data, operasi CRUD, autentikasi & manajemen sesi berlevel, serta integrasi pustaka pihak ketiga untuk fitur PDF.</li></ul></div>
                <div class="project-buttons">
                    <a href="https://github.com/Ddos-spec?tab=repositories" class="project-button">Go to Repo</a>
                    <a href="#" class="project-button-detail" data-project="2">View Detail</a>
                 </div>
            </div>
        </div>
    </div>
    <div class="swiper-slide">
        <div class="project-card">
            <Image src={proj4} alt="Project 4" />
            <div class="project-content">
                <div class="project-section"><h3>Peran Saya</h3><ul><li>Merancang & mengembangkan aplikasi To‑Do List fungsional dengan antarmuka bersih dan intuitif.</li></ul></div>
                <div class="project-section"><h3>Proses</h3><ul><li>Struktur HTML + CSS (termasuk dark mode) untuk tampilan; JavaScript modular untuk CRUD tugas; data disimpan di localStorage; fitur filter (all/completed/pending) dan progress bar.</li></ul></div>
                <div class="project-section"><h3>Apa yang Saya Pelajari</h3><ul><li>Mendalami manipulasi DOM & event handling JavaScript, manajemen state klien dengan localStorage, dan penulisan kode modular untuk keterbacaan serta pemeliharaan.</li></ul></div>
                <div class="project-buttons">
                    <a href="https://github.com/Ddos-spec?tab=repositories" class="project-button">Go to Repo</a>
                    <a href="#" class="project-button-detail" data-project="3">View Detail</a>
                </div>
            </div>
        </div>
    </div>
    <div class="swiper-slide">
         <div class="project-card">
            <Image src={proj5} alt="Project 5" />
            <div class="project-content">
                <div class="project-section"><h3>Peran Saya</h3><ul><li>Bertanggung jawab penuh atas reverse engineering dan replikasi statis identik situs wimcycle.com, meliputi semua struktur halaman, aset visual, dan fungsionalitas front‑end.</li></ul></div>
                <div class="project-section"><h3>Proses</h3><ul><li>Unduh dan susun ulang HTML, CSS, JavaScript, gambar, dan dokumen (PDF) dengan hierarki direktori dan penamaan file persis sama; analisis DOM dan aset untuk mendokumentasikan arsitektur front‑end secara offline.</li></ul></div>
                <div class="project-section"><h3>Apa yang Saya Pelajari</h3><ul><li>Mendalami arsitektur WordPress kompleks, manajemen ribuan aset dan dependensi, teknik penelusuran aset, serta pentingnya ketelitian dalam mereplikasi sistem digital untuk analisis dan pembelajaran.</li></ul></div>
                <div class="project-buttons">
                    <a href="https://github.com/Ddos-spec?tab=repositories" class="project-button">Go to Repo</a>
                    <a href="#" class="project-button-detail" data-project="4">View Detail</a>
                </div>
            </div>
        </div>
    </div>
</div>
                <div class="swiper-pagination"></div>
                <div class="swiper-button-next"></div>
                <div class="swiper-button-prev"></div>
            </div>
        </section>

        <section class="section fade-up" id="certificates">
            <h2>My Certificates</h2>
            <div class="certificates-container"> 
                <div class="certificates-grid" id="certificatesGrid">
                {certImages.map((img) => (
                    <div class="certificate-card">
                        <a href="https://www.freecodecamp.org/certification/fcc-d5e232f7-c5b3-4a51-99d1-cc8ab2aa8324/responsive-web-design" target="_blank" rel="noopener noreferrer">
                             <Image src={img.default} alt="Certificate" />
                        </a>
                        <p class="certificate-title">Certification</p>
                    </div>
                ))}
                </div>
                <div class="view-more-overlay" id="viewMoreOverlay">
                    <button class="view-more-button" id="viewMoreBtn">View More</button>
                </div>
            </div>
        </section>

        <section class="section fade-up" id="contact">
            <h2>Contact Me</h2>
            <div class="contact-container">
                <div class="contact-form-wrapper">
                    <form class="contact-form" name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field">
                        <input type="hidden" name="form-name" value="contact" />
                        <div class="hidden" style="display: none;">
                            <label>Don’t fill this out if you’re human: <input name="bot-field" /></label>
                        </div>
                        <div class="form-group">
                            <label for="name">Name</label>
                            <input type="text" id="name" name="name" required>
                        </div>
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" name="email" required>
                        </div>
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea id="message" name="message" placeholder="massages whatever..." required></textarea>
                        </div>
                        <button type="submit" class="submit-button">Send Message</button>
                    </form>
                    
                </div>
                <div class="contact-info-wrapper">
                    <h3>Find me on</h3>
                    <div class="social-icons">
                        <a href="https://github.com/Ddos-spec" aria-label="GitHub"><i class="fab fa-github"></i></a>
                        <a href="https://www.facebook.com/profile.php?id=100081610536615" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
                        <a href="https://www.instagram.com/djaryost_/" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
                        <a href="https://wa.me/6285771518231" aria-label="WhatsApp"><i class="fab fa-whatsapp"></i></a>
                    </div>
                </div>
            </div>
        </section>
    </main>
    
    <footer class="main-footer fade-up">
        <div class="footer-content">
            <div class="footer-links">
                <a href="#home">Home</a>
                <a href="#projects">Projects</a>
                <a href="#certificates">Certificates</a>
                <a href="#contact">Contact</a>
            </div>
            <p class="footer-quote">"Code is like humor. When you have to explain it, it’s bad."</p>
            <p class="copyright">&copy; 2025 Fadjar Aryo Seto. All rights reserved.</p>
        </div>
    </footer>

    <div class="modal-overlay" id="projectModal">
        <div class="modal-content">
            <button class="modal-close" id="modalClose">&times;</button>
            <button class="modal-nav modal-nav-prev" id="modalPrev">&#8249;</button>
            <button class="modal-nav modal-nav-next" id="modalNext">&#8250;</button>
            <div class="modal-left">
                <!-- Modal Image will be handled by JS, but standard img tag is used here for dynamic src assignment -->
                <img src="" alt="Project Image" id="modalProjectImage" class="modal-project-image">
            </div>
            <div class="modal-right" id="modalContent">
                <div class="modal-author-info">
                    <Image src={profilePic} alt="Author Profile" class="modal-author-photo" width={50} height={50} />
                    <span class="modal-author-name">djaryost_</span>
                </div>
                <div class="modal-section">
                    <h3>My Role</h3>
                    <p id="modalRole">Lorem ipsum dolor sit amet...</p>
                </div>
                <div class="modal-section">
                    <h3>Process</h3>
                    <p id="modalProcess">Duis aute irure dolor in reprehenderit...</p>
                </div>
                <div class="modal-section">
                    <h3>What I Learned</h3>
                    <p id="modalLearned">Sed ut perspiciatis unde omnis iste natus...</p>
                </div>
            </div>
        </div>
    </div>

    <div class="story-viewer" id="storyViewer">
        <div class="story-container">
            <div class="story-progress-bars" id="storyProgressBars">
                </div>
            <div class="story-header">
                <div class="story-user-info">
                    <Image src={profilePic} alt="User" class="story-user-pic" width={32} height={32} />
                    <span class="story-user-name">djaryost_</span>
                </div>
                <button class="story-close" id="storyClose">&times;</button>
            </div>
            <video class="story-video" id="storyVideo" playsinline></video>
            <div class="story-nav story-nav-prev" id="storyNavPrev"></div>
            <div class="story-nav story-nav-next" id="storyNavNext"></div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js" is:inline></script>
    <script src="https://cdn.jsdelivr.net/npm/glightbox/dist/js/glightbox.min.js" is:inline></script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js" is:inline></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/ScrollToPlugin.min.js" is:inline></script>
    
    <script src="/script.js" is:inline></script>
</body>
</html>